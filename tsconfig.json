{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "Node16",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "outDir": "out",
        "rootDirs": ["src"],
        "resolveJsonModule": true,
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "types": ["node", "mocha", "vscode"]
    },
    "include": [
        "src/**/*",
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "src/test/suite/read_templates.test.ts",
    ]
}
