{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "Node16",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "outDir": "out",
        "rootDirs": ["src"],
        "resolveJsonModule": true,
        "strict": true,
        "sourceMap": true,
        "declaration": true
    },
    "include": [
        "src/**/*",
        "src/**/*.ts",
        // other includes if necessary
    ],
    "exclude": [
        "node_modules",
        "src/test/suite/read_templates.test.ts",
        // other excludes if necessary
    ]
}
